<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_marginTop="@dimen/dp_15"
    android:layout_marginLeft="@dimen/dp_15"
    android:layout_marginRight="@dimen/dp_15"
    android:background="@drawable/item_shape"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/design_scheme"
        android:text="设计方案"
        android:layout_marginTop="@dimen/dp_15"
        android:layout_marginLeft="@dimen/dp_15"
        android:textColor="@color/color_3"
        android:textSize="@dimen/sp_18"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/scheme"
        android:paddingBottom="@dimen/dp_3_5"
        android:paddingTop="@dimen/dp_3_5"
        android:paddingLeft="@dimen/dp_12"
        android:paddingRight="@dimen/dp_12"
        android:text="设计方案"
        android:layout_toRightOf="@+id/design_scheme"
        android:layout_marginTop="@dimen/dp_15"
        android:layout_marginLeft="@dimen/dp_10"
        android:textColor="@color/white"
        android:background="@drawable/scheme_shape"
        android:textSize="@dimen/sp_12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/serial_number"
        android:layout_below="@id/design_scheme"
        android:layout_marginTop="@dimen/dp_14"
        android:layout_marginLeft="@dimen/sp_15"
        android:text="北京市M87线工程勘察设计"
        android:textSize="@dimen/sp_15"
        android:textColor="@color/color_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/abarbeitung"
        android:layout_below="@+id/serial_number"
        android:layout_marginTop="@dimen/dp_14"
        android:layout_marginLeft="@dimen/sp_15"
        android:text="版本：第1次修订"
        android:textSize="@dimen/sp_15"
        android:textColor="@color/color_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/rummager"
        android:layout_below="@+id/abarbeitung"
        android:layout_marginTop="@dimen/dp_14"
        android:layout_toLeftOf="@+id/pass"
        android:layout_marginRight="@dimen/dp_15"
        android:layout_marginLeft="@dimen/sp_15"
        android:text="北京市M87线工程勘察设计-济南M87线-长清站"
        android:textSize="@dimen/sp_15"
        android:textColor="@color/color_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:layout_marginBottom="@dimen/dp_19"
        android:id="@+id/check_date"
        android:layout_below="@+id/rummager"
        android:layout_marginTop="@dimen/dp_14"
        android:layout_marginLeft="@dimen/sp_15"
        android:text="编制完成日期：2021-04-08"
        android:textSize="@dimen/sp_15"
        android:textColor="@color/color_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <ImageView
        android:layout_marginRight="@dimen/dp_25"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:id="@+id/pass"
        android:src="@drawable/pass"
        android:layout_width="@dimen/dp_72"
        android:layout_height="@dimen/dp_65"/>
</RelativeLayout>